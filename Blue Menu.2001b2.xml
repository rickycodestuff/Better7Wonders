<Defaults>
    <Panel class="panelMenu"
        height="1200"
        width="1700"
        position="0 0 -200"
        color="#000000CC"
        visibility="Blue"
        active="true"
        offsetXY="0 1200"
        padding="44">
    </Panel>

    <TableLayout class="tableBaseMenu"
        columnWidths="0"
        cellSpacing="80">
    </TableLayout>

    <HorizontalLayout class="tableWonderMenu"
        spacing="80"
        active="false">
    </HorizontalLayout>

    <Button class="buttonBack"
        minWidth="317"
        preferredWidth="317">
    </Button>

    <TableLayout class="tableMenuSteps"
        preferredWidth="9999"
        cellSpacing="80">
    </TableLayout>


    <Text class="textMenu"
        fontsize="120"
        color="black">
    </Text>

</Defaults>

<Panel class="panelMenu" id="blueMenu">
    <TableLayout class="tableBaseMenu" id="blueBaseMenu">
        <Row>
            <Cell>
                <Button class="buttonPlayCard" onClick="playCard">
                    <Text class="textMenu">PLAY</Text>
                </Button>
            </Cell>
        </Row>

        <Row>
            <Cell>
                <Button class="buttonWonderStep" onClick="wonderStep">
                    <Text class="textMenu">WONDER STEP</Text>
                </Button>
            </Cell>
        </Row>

        <Row>
            <Cell>
                <Button class="buttonSellCard" onClick="sellCard">
                    <Text class="textMenu">SELL</Text>
                </Button>
            </Cell>
        </Row>
    </TableLayout>

    <HorizontalLayout class="tableWonderMenu" id="blueWonderMenu">
        <Button class="buttonBack" onClick="backToMenu">
            <Image image="backArrow"
                height="100"
                width="100">
            </Image>
        </Button>

        <TableLayout class="tableMenuSteps">
            <!-- wonder steps -->
        </TableLayout>

    </HorizontalLayout>
</Panel>