<!-- ! DEFAULTS -->
<Defaults>
    <!-- min panel dimensions 268 x 40 | padding 8-->
    <Panel class = 'panelStatus' id = 'panelStatus'
        width = '268' 
        height = '40' 
        padding = '8' 
        color = '#000000CC'
        rectAlignment = 'upperLeft'
        offsetXY = '148 -20'
        visibility = 'White|Purple|Yellow|Red|Orange|Blue|Green|Black|Grey'>
    </Panel>

    <TableLayout class = 'tableStatus' id = 'tableStatus'
        columnWidths = '24 0' 
        cellSpacing = '8' 
        offsetXY = '0 -32'>
    </TableLayout>

    <Button class = 'buttonReady'
        height = '24'
        width = '120'
        fontSize = '18'
        fontStyle = 'Bold'>
    </Button>

    <Text class = 'textStatusTitle' 
        fontSize = '18'
        fontStyle = 'bold' 
        color = 'white'
        alignment='middleCenter'>
    </Text>

    <Text class = 'textPlayerName' 
        fontSize = '18' 
        fontStyle = 'Bold'
        color = 'grey'
        alignment = 'middleLeft'>
    </Text>

    <Row id = 'rowPlayer' preferredHeight = '24'></Row>
    <Row preferredHeight = '24'></Row>
</Defaults>

<!-- ! MAIN XML -->
