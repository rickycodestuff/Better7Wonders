<!-- ! DEFAULTS -->
<Defaults>
    <Panel class = 'statusPanel'
        width = '270' 
        padding = '5' 
        height = '450' 
        color = '#000000CC' 
        allowDragging = 'True' 
        returnToOriginalPositionWhenReleased = 'false' 
        rectAlignment = 'upperCenter'
        offsetXY = '-700 -20'
        visibility = 'White|Purple|Yellow|Red|Orange|Blue|Green|Black'>
    </Panel>

    <TableLayout class = 'statusTable'
        columnWidths = '28 0' 
        cellSpacing = '5' 
        offsetXY = '0 -30'
        allowDragging = 'True' 
        returnToOriginalPositionWhenReleased = 'false' 
        autoCalculateHeight = 'true'>
    </TableLayout>

    <Panel class = 'statusBox'
        height = '20'
        width = '20'
        color = 'green'>
    </Panel>

    <Text class = 'statusTitle' 
        fontSize = '18'
        fontStyle = 'bold' 
        color = 'white'
        alignment='upperCenter' 
        offsetXY='0 -4'>
    </Text>

    <Text class = 'playerName' 
        fontSize = '18' 
        color = 'grey'
        alignment = 'middleLeft'
        fontStyle = 'Bold'
        dontUseTableCellBackground = 'true'>
    </Text>

    <Cell dontUseTableCellBackground = 'true'></Cell>
    <Row height = '32'></Row>
</Defaults>

<!-- ! MAIN XML -->
<Panel class = 'statusPanel'>
    <TableLayout class = 'statusTable'>
        <!-- rows to be filled with players name and status -->
    </TableLayout>
</Panel>